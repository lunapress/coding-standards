<?xml version="1.0"?>
<ruleset name="WpOnepixStandard">
    <rule ref="PSR12"/>

    <file>./WpOnepixStandard</file>
    <file>./tests</file>

    <exclude-pattern>*/Tests/*/*.inc</exclude-pattern>
    <exclude-pattern>*/Tests/*/*.inc.fixed</exclude-pattern>

    <arg name="extensions" value="php" />
    <arg name="report" value="summary" />
    <arg name="colors" />
    <arg name="cache" />
    <arg value="sp" />
</ruleset>